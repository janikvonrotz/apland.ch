{
  "version": 2,
  "alias": "apland.ch",
  "builds": [
    {
      "src": "/assets/*",
      "use": "@now/static"
    },
    {
      "src": "**/*.md",
      "use": "@now/md",
      "config": {
        "title": "Apland",
        "language": "de",
        "meta": [{ "name": "description", "content": "Apland"}],
        "css": "/assets/style.css"
      }
    }
  ]
}
